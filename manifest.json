{
  "manifest_version": 2,
  "name": "Twitter Stock Ticker Extractor",
  "version": "1.0",
  "description": "Continuously extracts stock tickers and post links from Twitter/X while scrolling",

  "permissions": [
    "https://x.com/*",
    "storage",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_title": "Twitter Ticker Extractor",
    "default_popup": "popup.html"
  },

  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  }
}
